<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>

<StackPane fx:id="view" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMousePressed="#onMousePressed" prefHeight="700.0" prefWidth="1150.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <MediaView fx:id="mediaView" fitHeight="400.0" fitWidth="600.0" />
      <BorderPane fx:id="borderPane" StackPane.alignment="TOP_CENTER">
         <center>
            <Label id="start-label" fx:id="startLabel" stylesheets="@../css/main.css" text="PRESIONA ENTER PARA EMPEZAR" BorderPane.alignment="CENTER" />
         </center>
         <StackPane.margin>
            <Insets />
         </StackPane.margin>
         <top>
            <VBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <ButtonBar prefHeight="100.0" prefWidth="425.0">
                          <buttons>
                              <VBox alignment="CENTER" prefHeight="100.0" prefWidth="247.0" spacing="5">
                                 <children>
                                    <HBox alignment="CENTER" prefHeight="23.0" prefWidth="118.0" spacing="5">
                                       <children>
                                          <Label text="Volumen:" />
                                          <Slider fx:id="sliderVolumen" max="1.0" min="0.0" value="0.5" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              <Button fx:id="muteVolumen" onAction="#silenciar" prefHeight="26.0" prefWidth="253.0" stylesheets="@../css/main.css" text="Mute" />
                          </buttons>
                        </ButtonBar>
                        <ButtonBar fx:id="toolBar" prefHeight="100.0" prefWidth="705.0">
                          <buttons>
                            <Button fx:id="minButton" mnemonicParsing="false" onMouseClicked="#onMin" stylesheets="@../css/main.css">
                                 <graphic>
                                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/min.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                              <Button fx:id="maxButton" mnemonicParsing="false" onMouseClicked="#onMax" stylesheets="@../css/main.css">
                                 <graphic>
                                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/max.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                              <Button fx:id="closeButton" mnemonicParsing="false" onMouseClicked="#onClose" stylesheets="@../css/main.css">
                                 <graphic>
                                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/x.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                          </buttons>
                        </ButtonBar>
                     </children>
                  </HBox>
                  <ImageView fx:id="logo" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/pokedle.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
         </top>
      </BorderPane>
   </children>
</StackPane>
